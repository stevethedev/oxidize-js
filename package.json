{
  "name": "oxidize",
  "version": "1.0.6",
  "description": "A Rust-inspired utility library for TypeScript and JavaScript",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "scripts": {
    "doc": "./node_modules/.bin/typedoc --tsconfig ./tsconfig.doc.json --out ./doc --mode modules --exclude '**/*+(spec|oxidize).ts' ./src",
    "build": "tsx ./scripts/build.ts",
    "check": "npm-run-all check:*",
    "check:dependencies": "depcheck --ignores '@types/*'",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "check:types": "tsc --noEmit",
    "fix": "npm-run-all fix:* check",
    "fix:lint": "eslint --fix .",
    "fix:format": "prettier --write .",
    "clean": "rimraf ./*.d.ts dist",
    "prepublishOnly": "npm run test && npm run build",
    "postpublish": "npm run clean",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevethedev/oxidize-js.git"
  },
  "keywords": [
    "rust",
    "typescript",
    "javascript",
    "ts",
    "js",
    "utility",
    "util"
  ],
  "files": [
    "dist",
    "src",
    "*.d.ts"
  ],
  "author": "Steven Jimenez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stevethedev/oxidize-js/issues"
  },
  "homepage": "https://github.com/stevethedev/oxidize-js#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.17.1",
    "depcheck": "^1.4.7",
    "esbuild": "^0.25.8",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^11.0.3",
    "jest": "^30.0.5",
    "jiti": "^2.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "roots": [
      "<rootDir>/src"
    ]
  }
}
