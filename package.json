{
  "name": "oxidize",
  "version": "1.0.6",
  "description": "A Rust-inspired utility library for TypeScript and JavaScript",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "scripts": {
    "doc": "./node_modules/.bin/typedoc --tsconfig ./tsconfig.doc.json --out ./doc --mode modules --exclude '**/*+(spec|index).ts' ./src",
    "build": "tsx ./scripts/build.ts",
    "prepublishOnly": "npm run test && npm run build",
    "postpublish": "npm run clean",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevethedev/oxidize-js.git"
  },
  "keywords": [
    "rust",
    "typescript",
    "javascript",
    "ts",
    "js",
    "utility",
    "util"
  ],
  "files": [
    "dist",
    "src",
    "*.d.ts"
  ],
  "author": "Steven Jimenez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stevethedev/oxidize-js/issues"
  },
  "homepage": "https://github.com/stevethedev/oxidize-js#readme",
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^22.17.1",
    "esbuild": "^0.25.8",
    "glob": "^11.0.3",
    "jest": "^30.0.5",
    "prettier": "1.16.4",
    "ts-jest": "^29.4.1",
    "tslib": "^1.9.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "roots": [
      "<rootDir>/src"
    ]
  }
}
