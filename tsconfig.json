{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2020"],
    "declaration": true,
    "stripInternal": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "module": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "oxidize/*": ["./src/*"],
      "oxidize": ["./src/index.ts"]
    },

    "rootDir": "./src",

    "sourceRoot": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,

    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**", "dist/**", "doc/**"],
  "typedocOptions": {
    "out": "./doc",
    "excludePrivate": true,
    "entryPoints": ["./src/oxidize.ts"],
    "exclude": ["**/node_modules/**", "dist/**", "**/*.spec.ts", "src/oxidize.ts"],
    "theme": "default",
    "name": "Oxidize"
  }
}
