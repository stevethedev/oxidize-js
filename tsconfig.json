{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "stripInternal": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "oxidize/*": ["./src/*"],
      "oxidize": ["./src/oxidize.ts"]
    },

    "rootDir": "./src",

    "sourceRoot": "./",
    "inlineSourceMap": true,
    "inlineSources": true,

    "experimentalDecorators": true
  },
  "include": ["src"]
}
